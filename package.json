{
  "name": "recipe-bible-ui",
  "version": "0.0.1",
  "private": false,
  "repository": "git@github.com:alwaystudios/recipe-bible-ui.git",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "prettier --write './src/**/*.{ts,tsx,json,css,md}'",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "sh cleanup.sh",
    "upgrade-libs": "yarn upgrade @alwaystudios/as-ui-components@latest @alwaystudios/recipe-bible-sdk@latest @alwaystudios/as-utils@latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format",
      "pre-push": "yarn build"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@alwaystudios/as-ui-components": "^1.0.27",
    "@alwaystudios/as-utils": "^1.0.9",
    "@alwaystudios/recipe-bible-sdk": "^1.0.7",
    "@auth0/auth0-react": "^1.1.0",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropdown": "^1.9.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "react-share": "^4.3.1",
    "react-spinners": "^0.9.0",
    "shortid": "^2.2.16",
    "styled-components": "^5.2.0",
    "superagent": "^6.1.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@types/ramda": "^0.27.32",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/shortid": "^0.0.29",
    "@types/styled-components": "^5.1.4",
    "@types/superagent": "^4.1.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "asset-require-hook": "^1.2.0",
    "eslint-plugin-deprecation": "^1.1.0",
    "eslint-plugin-functional": "^3.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "nock": "^13.0.4",
    "prettier": "^2.1.2"
  }
}
